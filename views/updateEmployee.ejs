<%- include('partials/header') %>
<div class="d-flex">
    <div class="current-record">
        <h4>Selected Record</h4>
        <table>
                <tr>
                    <th>Emp No</th>
                    <td><%= empNum %></td>
                </tr>
                <tr>
                    <th>First Name</th>
                    <td><%= firstName %></td>
                </tr>
                <tr>
                    <th>Last Name</th>
                    <td><%= lastName %></td>
                </tr>
                <tr>
                    <th>Gender</th>
                    <td><%= gender %></td>
                </tr>
                <tr>
                    <th>DOB</th>
                    <td><%= birthDate %></td>
                </tr>
                <tr>
                    <th>Hire Date</th>
                    <td><%= hireDate %></td>
                </tr>
                <tr>
                    <th>Role</th>
                    <td><%= title %></td>
                </tr>
                <tr>
                    <th>Department</th>
                    <td><%= deptName  %></td>
                </tr>
                <tr>
                    <th>Salary</th>
                    <td><%= salary %></td>
                </tr>
                <tr>
                    <th>From Date</th>
                    <td><%= fromDate %></td>
                </tr>
                <tr>
                    <th>To Date</th>
                    <td><%= toDate %></td>
                </tr>
        </table>
    </div>
    <div class="update-employee-form">
        <form action="/updated" method="post">   
            <h3>Update Record <span class="fs-5"> - <%= empNum %></span></h3>
            <div class="emp-no" style="display: none;">
                <input type="number" name="emp_no" id="" value="<%= empNum %>">
            </div>     
            <div class="first-name">
                <label >First Name : </label>
                <input  name="firstName" type="text" required>
            </div>
            <div class="last-name">
                <label >Last Name : </label>
                <input name="lastName" type="text"  required>
            </div>
            <div class="gender">
                <label class="label" >Gender : </label>
                    <input type="radio" name="gender" id="" value="m" required>
                    <label for="">Male</label>
                    <input type="radio" name="gender" id="" value="f" required>
                    <label for="">Female</label>            
            </div>
            <div class="dob">
                <label for="">DOB : </label>
                <input type="date" name="dob" id=""   required>
            </div>
            <div class="dept-name">
                <label for="">Dept : </label>
                <select name="deptName" id="dept-select" onchange="giveSelection(this.value)" required>
                    <option value="" disabled selected>--- Select ---</option>
                    <option value="Customer Service">Customer Service</option>
                    <option value="Development">Development</option>
                    <option value="Finance">Finance</option>
                    <option value="Human Resources">Human Resources</option>
                    <option value="Marketing">Marketing</option>
                    <option value="Production">Production</option>
                    <option value="Quality Management">Quality Management</option>
                    <option value="Research">Research</option>
                    <option value="Sales">Sales</option>
                </select>
            </div>
            <div class="role">
                <label for="">Role : </label>
                <select name="title" class="title-select" required >
                    <option value="" disabled selected>--- Select ---</option>
                    <option value="Senior Engineer">Senior Engineer</option>
                    <option value="Staff">Staff</option>
                    <option value="Engineer">Engineer</option>
                    <option value="Senior Staff">Senior Staff</option>
                    <option value="Assistant Engineer">Assistant Engineer</option>
                    <option value="Technique Leader">Technique Leader</option>
                    <option value="Manager">Manager</option>
                </select>
            </div>
            <div class="salary">
                <label for="">Salary : </label>
                <input type="number" name="salary" id="" required>
            </div>
            <div class="contract-starting-date">
                <label for="">From Date : </label>
                <input type="date" name="fromDate"  id="" required>
            </div>
            <div class="contract-ending-date">
                <label for="">To Date : </label>
                <input type="date" name="toDate" id=""  required>
            </div>
            <div class="button">
                <a class="btn btn-light" href="/employeeinfo">BACK</a>
                <button class="btn btn-outline-light" type="submit">UPDATE</button>
            </div>
            
        </form>
    </div>
</div>

